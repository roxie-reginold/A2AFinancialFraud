# ADK Financial Fraud Detection System Environment Configuration
# Copy this file to .env and update with your actual values

# Required for production
GOOGLE_CLOUD_PROJECT=fraud-detection-adkhackathon
GOOGLE_API_KEY=your-api-key

# Environment (development, staging, production)
ENVIRONMENT=development

# Email Configuration (optional)
EMAIL_SENDER=your-email@domain.com
EMAIL_PASSWORD=your-app-password
EMAIL_RECIPIENTS=alerts@domain.com,security@domain.com

# Alert Configuration
HIGH_RISK_THRESHOLD=0.8
MEDIUM_RISK_THRESHOLD=0.5
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=

# Redis Configuration (for Docker)
REDIS_PASSWORD=frauddetection123

# Grafana Configuration (for Docker)
GRAFANA_PASSWORD=admin

# Model Configuration
GEMINI_MODEL=gemini-2.5-pro-preview-05-06

# For development/testing without Google Cloud
# Set these to bypass validation
BYPASS_CLOUD_VALIDATION=true