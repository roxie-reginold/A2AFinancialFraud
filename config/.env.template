# Email Configuration Template
# Copy this file to .env and fill in your details

# Required: Your email address (sender)
ALERT_EMAIL_SENDER=your-email@gmail.com

# Required: Your email password (use app password for Gmail)
ALERT_EMAIL_PASSWORD=your-16-char-app-password

# Required: Recipients (comma-separated)
ALERT_EMAIL_RECIPIENTS=fraud-team@company.com,security@company.com

# Optional: SMTP settings (defaults to Gmail)
ALERT_SMTP_SERVER=smtp.gmail.com
ALERT_SMTP_PORT=587

# Optional: Debug mode
ALERT_EMAIL_DEBUG=false
